mixin header-navigation(list)
    nav.header-navigation
        ul.header-navigation__list
            each item in list
                li.header-navigation__item
                    if item.isExpanded
                        a(href= item.link).header-navigation__link.header-navigation__link_expanded= item.text
                    else
                        a(href= item.link).header-navigation__link= item.text
                        
                    
mixin header(isHighlighted)
    .header-regular
        .header-regular__content
            img(src="./images/logo-color.svg", alt="logo").header-regular__logo
            .header-regular__navigation
                include ../header-navigation/header-navigation
                +navigation(isHighlighted, false)
            .header-regular__buttons
                include ../log-in-button/log-in-button
                include ../submit-button/submit-button
                +submit('зарегистрироваться', false, '#')
            .header-regular__anchors
                a(href="#").header-regular__link.header-regular__link_log-in войти
                a(href="#").header-regular__link.header-regular__link_sign-up зарегистрироваться
            .header-regular__burger
                include ../burger/burger
mixin text-field(data)
    -
        const {action = "#", method = "post", type = "text", name = "name", isExpanded,
            title, subtitle, placeholder, mods, dropdownType, dropdownData} = data
        let formClassName = 'text-field__form'
    if mods 
        - mods.forEach(item => {formClassName += ` text-field__form_${item}`})
    .text-field
        .text-field__header
            .text-field__title= data.title
            .text-field__subtitle= data.subtitle
        form(action= action method= method class= formClassName)
            input(type= type, placeholder= placeholder, name= name).text-field__input
        if data.isExpanded
            .text-field__dropdown
                +dropdown(data.dropdownType, data.dropdownData)
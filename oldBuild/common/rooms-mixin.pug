include ./buttons-mixins
mixin room(img, number, price, rate, reviews, hidden, category, link)
    .room-card
        .room-card__before(class= hidden)
            a(href="#")
        .room-card__after(class= hidden)
            a(href="#")
        a(href= link).room-card__link
            img(src= img, alt= number).room-card__img    
        .room-card__description
            .room-card__number.number
                .number__text №
                .number__digits= number
            .room-card__category= category
            .room-card__price.price
                .price__digits= price
                .price__text ₽ в сутки
        .room-card__separation
        .room-card__feedback
            .room-card__rate
                +rate-button(rate)
            .room-card__review.review
                .review__digits= reviews 
                .review__text Отзывов